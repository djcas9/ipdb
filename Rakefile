# -*- ruby -*-

require 'rubygems'
require 'hoe'

Hoe.spec 'ipdb' do
  self.rubyforge_name = 'ipdb'
  self.developer('Dustin Willis Webber', 'dustin.webber@gmail.com')
  self.remote_rdoc_dir = 'docs'
  self.extra_deps = [
    ['nokogiri', '>=1.2.0']
  ]
 
  self.extra_dev_deps = [
    ['rspec', '>=1.2.8'],
    ['yard', '>=0.4.0']
  ]
 
  self.spec_extras = {:has_rdoc => 'yard'}
end

